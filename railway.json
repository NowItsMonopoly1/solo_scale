{
  "$schema": "https://railway.app/fastify.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend && npm run start",
    "healthcheckPath": "/api/system/health-metrics",
    "restartPolicyType": "ON_FAILURE"
  }
}
